{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<h3>Editar categorias</h3>
<br>
<div class="card">
    <div class="card-body">
        <form action="/admin/categories/edit" method="POST">

            <input type="hidden" name="id" value="{{category._id}}">

            <label for="name">Nome:</label>
            <input type="text" name="name" id="name" placeholder="Nome da Categoria" class="form-control" value="{{category.name}}">

            <label for="slug">Slug:</label>
            <input type="text" name="slug" id="slug" placeholder="Slug da Categoria" class="form-control" value="{{category.slug}}">

            <br>

            <button type="submit" class="btn btn-success">Salvar alterações</button>

        </form>
    </div>
</div>